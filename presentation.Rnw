\begin{frame}{Kaplan-Meier Max Likelihood Estimator for $\hat S(t)$}
\begin{tabular}{ll}
  $t_i$ & time interval \\
  $d_i$ & \# events in $t_i$ \\
  $n_i$ & \# subjects \emph{at risk} in $t_i$ \\
\end{tabular}

\begin{eqnarray*}
                             n_{i + 1} & = & n_i - d_i - c_i \\
                             \hat S(0) & = & 1 \\
                             \hat S(t) & = & \prod_{t_i = 0}^{t} \frac{n_i - d_i}{n_i} \\
                                       & = & \frac{n_i - d_i}{n_i} \cdot S(t_{i - 1}) \\
  \mathrm{Var}\left[ \hat S(t) \right] & = & \sum_{t_i = 0}^{t} \frac{d_i}{n_i (n_i - d_i)}
\end{eqnarray*}
\end{frame}

\begin{frame}{Models}
(Cox) Proportional Hazards Model
% semi-parametric
% hazards function given covariates (factors)
% H_0: all \Beta_i = 0

$$\lambda(t | \mathbf{x}) = \lambda_{0}(t) \exp \left( \mathbf{x' \beta} \right)$$

Accelerated Failure Time Model
% parametric, specifies log(T)
%   exponential
%   weibull
%   lognormal
%   log-log
%   gamma

$$\log T = \mathbf{x' \beta} + \mathbf{\epsilon}$$

Exponential/Weibull Model

$$\lambda(t, \mathbf{x}) = \lambda_{0} \exp \left( \mathbf{x' \beta} \right)$$
\end{frame}

